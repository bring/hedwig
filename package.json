{
  "name": "hedwig",
  "version": "0.0.1",
  "description": "Bring Design System",
  "author": "Fredrik Jensen [Netlife Research]",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run serve\" \"npm run css:watch\" \"npm run js:watch\" \"npm run docs:watch\"",
    "build": "npm run css:build & npm run js:build & docs:build",
    "css:build": "postcss --replace ./src/**/*.css -o ./build/main.min.css -u postcss-cssnext -u cssnano",
    "css:watch": "postcss --replace ./src/**/*.css -o ./build/main.css -u postcss-cssnext --watch",
    "js:build": "rollup -c --name \"hedwig\"",
    "js:watch": "rollup -c -w --name \"hedwig\"",
    "docs:build": "node ./scripts/docs-build",
    "docs:watch": "node ./scripts/docs-watch",
    "serve": "concurrently \"node ./server\" \"npm run livereload\"",
    "livereload": "live-reload --port 9091 docs/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "catalog": "^2.5.3",
    "concurrently": "^3.4.0",
    "cssnano": "^3.10.0",
    "express": "^4.15.2",
    "live-reload": "^1.1.0",
    "node-watch": "^0.5.2",
    "postcss-cli": "^3.0.0",
    "postcss-cssnext": "^2.10.0",
    "reload": "^1.1.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "the-answer": "^1.0.0"
  }
}
