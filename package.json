{
  "name": "hedwig",
  "version": "0.0.1",
  "description": "Bring Design System",
  "author": "Fredrik Jensen [Netlife Research]",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run serve\" \"npm run watcher\"",
    "build": "npm run css:build & npm run js:build & npm run docs:build",
    "css:build": "node ./scripts/css-concat & postcss src/**/*.css --use postcss-cssnext cssnano --dir tmp/",
    "css:build": "postcss tmp/main.css --use postcss-cssnext cssnano -o ./build/main.css",
    "css:dev": "postcss tmp/main.css --use postcss-cssnext -o ./build/main.css",
    "js:build": "rollup -c --name \"hedwig\"",
    "js:dev": "rollup -c --name \"hedwig\"",
    "docs:build": "node ./scripts/docs-build",
    "watcher": "node ./scripts/watcher",
    "server": "node ./server",
    "serve": "concurrently \"npm run server\" \"npm run livereload\"",
    "livereload": "live-reload --port 9091 docs/ build/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run server & npm run build"
  },
  "dependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "concurrently": "^3.4.0",
    "cssnano": "^3.10.0",
    "express": "^4.15.2",
    "live-reload": "^1.1.0",
    "node-watch": "^0.5.2",
    "postcss-cli": "^3.0.0",
    "postcss-cssnext": "^2.10.0",
    "reload": "^1.1.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "the-answer": "^1.0.0"
  },
  "engines" : {
    "node" : "6.2.2",
    "npm": "3.9.5"
  }
}
