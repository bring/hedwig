{
  "name": "hedwig",
  "version": "0.0.1",
  "description": "Bring Design System",
  "author": "Fredrik Jensen [Netlife Research]",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run serve\" \"npm run css:watch\" \"npm run js:watch\"",
    "build": "npm run css:build & npm run js:build",
    "css:build": "postcss --replace ./src/**/*.css -o ./build/main.min.css -u autoprefixer -u postcss-cssnext -u cssnano",
    "css:watch": "postcss --replace ./src/**/*.css -o ./build/main.css -u autoprefixer -u postcss-cssnext --watch",
    "js:build": "babel ./src/index.js --out-file ./build/main.min.js --presets=es2015",
    "js:watch": "babel ./src --out-file ./build/main.js --presets=es2015 --watch",
    "serve": "node server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "rollup": "rollup -c --name \"hedwig\""
  },
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "catalog": "^2.5.3",
    "concurrently": "^3.4.0",
    "cssnano": "^3.10.0",
    "express": "^4.15.2",
    "postcss-cli": "^3.0.0",
    "postcss-cssnext": "^2.10.0",
    "rollup": "^0.41.6",
    "the-answer": "^1.0.0"
  }
}
